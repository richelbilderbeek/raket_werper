#!/bin/bash
# Script to install razzo and its dependencies
# on the Peregrine computer cluster
#
# Usage, locally:
#
#   ./scripts/1_install_raket
#
# Usage, on Peregrine:
#
#   sbatch ./scripts/1_install_raket
#
# Peregrine directives:
#SBATCH --partition=gelifes
#SBATCH --time=1:00:00
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --ntasks=1
#SBATCH --mem=1G
#SBATCH --job-name=1_install_raket
#SBATCH --output=1_install_raket.log
module load R
Rscript -e 'install.packages("remotes", repos="http://cran.r-project.org", dependencies = TRUE)'
Rscript -e 'remotes::install_github("richelbilderbeek/PBD/PBD", ref = "master")'
Rscript -e 'remotes::install_github("thijsjanzen/nLTT", ref = "develop")'
Rscript -e 'remotes::install_github("richelbilderbeek/pirouette", ref = "richel")'
Rscript -e 'remotes::install_github("Giappo/mbd")'
Rscript -e 'remotes::install_github("richelbilderbeek/becosys")'
Rscript -e 'remotes::install_github("richelbilderbeek/peregrine", dependencies = TRUE)'
Rscript -e 'remotes::install_github("richelbilderbeek/razzo", ref = "richel")'
Rscript -e 'remotes::install_github("richelbilderbeek/raket", ref = "richel")'
Rscript -e 'if (!beastier::is_beast2_installed()) beastier::install_beast2()'
Rscript -e 'if (!mauricer::is_beast2_pkg_installed("NS")) mauricer::install_beast2_pkg("NS")'
